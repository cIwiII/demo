page {
  background-color: #f6f6f6;
}
.products {
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.products .item {
  width: 49%;
  height: 580rpx;
  border-radius: 8rpx;
  background-color: white;
  overflow: hidden;
  margin-bottom: 2%;
}
.products .item:nth-child(2n) {
  margin-left: 2%;
}
.products .item .picture image {
  width: 100%;
}
.products .item .text {
  padding: 10rpx;
}
.products .item .text .msg {
  font-size: 24rpx;
  color: black;
  text-align: center;
  height: 66rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.products .item .text .hot {
  width: 50px;
  height: 15px;
  border: 1px solid var(--themeColor);
  border-radius: 3px;
  text-align: center;
  line-height: 13px;
  font-size: 10px;
  color: var(--themeColor);
  margin-top: 20rpx;
}
.products .item .text .buy {
  overflow: hidden;
  margin-top: 20rpx;
}
.products .item .text .buy text:nth-child(1) {
  float: left;
  color: var(--themeColor);
  vertical-align: middle;
}
.products .item .text .buy text:nth-child(2) {
  float: right;
  font-size: 50rpx;
  color: var(--themeColor);
  margin-right: 20rpx;
  vertical-align: middle;
}
