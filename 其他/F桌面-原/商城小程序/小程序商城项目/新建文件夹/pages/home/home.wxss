.banner swiper {
  height: calc(100vw * 352 / 1125);
}
.banner swiper image {
  width: 100%;
}
.category {
  padding: 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.category .type {
  width: 25%;
}
.category .type image {
  width: 90%;
}
.category .type .title {
  text-align: center;
  font-size: 12px;
}
.page-section {
  background-color: white;
}
.page-section-title {
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
}
.page-section-spacing {
  margin-top: 60rpx;
}
.scroll-view_H {
  white-space: nowrap;
}
.scroll-view-item {
  height: 300rpx;
}
.scroll-view-item_H {
  display: inline-block;
  width: 100%;
  height: 400rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.scroll-view-item_H image {
  width: 100%;
}
